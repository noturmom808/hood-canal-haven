<script>
  // NAV scroll
  const nav = document.getElementById('nav');
  window.addEventListener('scroll', () => {
    nav.classList.toggle('scrolled', window.scrollY > 60);
  });

  // LIGHTBOX
  function openLightbox(el) {
    const src = el.querySelector('img').src;
    document.getElementById('lightbox-img').src = src;
    document.getElementById('lightbox').classList.add('open');
  }
  function closeLightbox() {
    document.getElementById('lightbox').classList.remove('open');
  }
  document.getElementById('lightbox').addEventListener('click', function(e) {
    if (e.target === this) closeLightbox();
  });

  // CALENDAR ‚Äî live iCal feed from Airbnb
  const ICAL_URL = 'https://www.airbnb.com/calendar/ical/968511318956336778.ics?t=0f1cf6752af24cd086ed7fbce4657671&locale=en';
  const PROXY = 'https://api.allorigins.win/get?url=';

  const months = ['January','February','March','April','May','June','July','August','September','October','November','December'];
  const days = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
  let currentDate = new Date();
  let viewYear = currentDate.getFullYear();
  let viewMonth = currentDate.getMonth();
  let bookedRanges = [];

  async function loadIcal() {
    try {
      const res = await fetch(PROXY + encodeURIComponent(ICAL_URL));
      const data = await res.json();
      bookedRanges = parseIcal(data.contents);
    } catch(e) {
      console.warn('Could not load iCal feed:', e);
    }
    renderCalendar();
  }

  function parseIcal(text) {
    const ranges = [];
    const lines = text.replace(/\r\n[ \t]/g, '').split(/\r?\n/);
    let dtstart = null, dtend = null;
    for (const line of lines) {
      if (line.startsWith('DTSTART')) {
        dtstart = parseIcalDate(line.split(':')[1]);
      } else if (line.startsWith('DTEND')) {
        dtend = parseIcalDate(line.split(':')[1]);
      } else if (line === 'END:VEVENT' && dtstart && dtend) {
        ranges.push({ start: dtstart, end: dtend });
        dtstart = null; dtend = null;
      }
    }
    return ranges;
  }

  function parseIcalDate(str) {
    str = (str || '').trim();
    const y = +str.slice(0,4), m = +str.slice(4,6)-1, d = +str.slice(6,8);
    return new Date(y, m, d);
  }

  function isBooked(year, month, day) {
    const date = new Date(year, month, day);
    return bookedRanges.some(r => date >= r.start && date < r.end);
  }

  function renderCalendar() {
    const title = document.getElementById('cal-title');
    const grid = document.getElementById('cal-grid');
    title.textContent = `${months[viewMonth]} ${viewYear}`;
    grid.innerHTML = '';

    days.forEach(d => {
      const el = document.createElement('div');
      el.className = 'cal-day-name';
      el.textContent = d;
      grid.appendChild(el);
    });

    const firstDay = new Date(viewYear, viewMonth, 1).getDay();
    const daysInMonth = new Date(viewYear, viewMonth + 1, 0).getDate();
    const today = new Date();

    for (let i = 0; i < firstDay; i++) {
      const el = document.createElement('div');
      el.className = 'cal-day empty';
      el.textContent = '.';
      grid.appendChild(el);
    }

    for (let d = 1; d <= daysInMonth; d++) {
      const el = document.createElement('div');
      el.className = 'cal-day';
      el.textContent = d;
      if (isBooked(viewYear, viewMonth, d)) el.classList.add('booked');
      if (d === today.getDate() && viewMonth === today.getMonth() && viewYear === today.getFullYear()) {
        el.classList.add('today');
      }
      grid.appendChild(el);
    }
  }

  function changeMonth(dir) {
    viewMonth += dir;
    if (viewMonth > 11) { viewMonth = 0; viewYear++; }
    if (viewMonth < 0) { viewMonth = 11; viewYear--; }
    renderCalendar();
  }

  loadIcal();
</script>
</body>
</html>
